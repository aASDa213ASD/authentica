
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% include "../../../../templates/css.html.twig" %}
    {% include "../../../../templates/js.html.twig" %}
    <title>Login - Authentica</title>
</head>

<body class="h-screen flex bg-gray-900 text-gray-200">
<!-- Left Side -->
<div class="bg-animated-gradient w-1/3 flex flex-col justify-center items-center select-none">
    <h1 class="text-4xl font-bold"><i class="nf nf-md-script_text_key me-3 mb-2"></i>Authentica</h1>
</div>

<!-- Right Side -->
<div class="bg-black w-2/3 flex justify-center items-center">
    <form class="w-full max-w-sm space-y-6" method="post">
        <h2 class="text-3xl font-semibold text-center pb-5">Welcome home, master</h2>

        {% for message in app.flashes("message") %}
            <div>{{ message }} - {{ app.request.server.get("REMOTE_ADDR") }}</div>
        {% endfor %}

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div>
            <label for="email" class="block text-gray-400 text-sm mb-1">Email address</label>
            <input
                    id="email"
                    type="email"
                    name="email"
                    class="w-full bg-zinc-800/60 border-gray-700 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 text-gray-100 p-3"
                    placeholder="example@mail.org"
                    required>
        </div>

        <div>
            <label for="password" class="block text-gray-400 text-sm mb-1">Password</label>
            <input
                    id="password"
                    type="password"
                    name="password"
                    class="w-full bg-zinc-800/60 border-gray-700 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 text-gray-100 p-3"
                    placeholder=""
                    required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button
                type="submit"
                class="w-full bg-transparent text-gray-100 rounded-lg p-3 font-semibold hover:bg-zinc-900 transition">
            Login
        </button>

        <p class="text-sm text-center text-gray-400">
            Don't have an account? <a href="#" class="text-blue-400 hover:underline ml-2">Get one</a>
        </p>
    </form>
</div>
</body>

</html>